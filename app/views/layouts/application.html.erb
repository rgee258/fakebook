<!DOCTYPE html>
<html>
  <head>
    <title>Fakebook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application','https://fonts.googleapis.com/css?family=Roboto&display=swap',
      media: 'all', 'data-turbolinks-track': true %>
    <%= stylesheet_link_tag 'application','https://fonts.googleapis.com/css?family=Noto+Sans+TC&display=swap',
      media: 'all', 'data-turbolinks-track': true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'shared/login_bar' unless current_user %>
    <%= render 'shared/navigation' if current_user %>
    <div class="main-wrapper">
      <% unless notice.nil? %>
        <div class="notice">
          <p><%= notice %></p>
        </div>
      <% end %>    
      <% unless alert.nil? %>
        <div class="alert">
          <p><%= alert %></p>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
