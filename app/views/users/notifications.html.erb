<h1>Notifications</h1>

<div class="notifications-listing">
  <% if @notifications.nil? %> 
    <p>No notifications available.</p>
  <% else %>
    <% @notifications.each do |fr| %>
      <div class="user-notification">
        <p>
          New friend request from <%= User.find(fr.sender_id).firstname %>.
          <div class="view-notification"><%= link_to "View", friend_request_path(fr.id) %><div>
        </p>
      </div>
    <% end %>
  <% end %>
</div>